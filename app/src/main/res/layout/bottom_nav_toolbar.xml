<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100">

        // Search Area
        <LinearLayout
            android:id="@+id/searchButId"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/searchImageViewIcon"
                android:background="#FFFFFF"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_home"
                android:clickable="true" />
            <TextView
                android:background="#FFFFFF"
                android:gravity="center"
                android:id="@+id/feed_text_butId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="3dp"/>

        </LinearLayout>

        // Discassion Area
        <LinearLayout
            android:id="@+id/discasionhButId"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/discassionImageViewIcon"
                android:background="#FFFFFF"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_chat"
                android:clickable="true" />

            <TextView
                android:id="@+id/search_text_butId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="Message"
                android:textColor="#000000"
                android:textSize="12sp" />

        </LinearLayout>

        // Home Area
        <LinearLayout
            android:id="@+id/homeButId"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/homeImageViewIcon"
                android:background="#FFFFFF"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_settings"
                android:clickable="true" />
            <TextView
                android:background="#FFFFFF"
                android:gravity="center"
                android:id="@+id/discassion_text_butId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post your ad"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="3dp"/>

        </LinearLayout>

        // Chat Area
        <LinearLayout
            android:id="@+id/chatButId"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chatImageViewIcon"
                android:background="#FFFFFF"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_shopping_cart"
                android:clickable="true" />
            <TextView
                android:background="#FFFFFF"
                android:gravity="center"
                android:id="@+id/chat_text_butId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="3dp"/>

        </LinearLayout>

        // Library Area
        <LinearLayout
            android:id="@+id/libraryButId"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/libraryImageViewIcon"
                android:background="#FFFFFF"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_user"
                android:clickable="true" />
            <TextView
                android:background="#FFFFFF"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="3dp"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>